.container{
    padding: 0;
}
.content{
    width: 100%;
    height: 400rpx;
    text-align: center;
    color: #000;
    font-size: 40rpx;
    line-height: 400rpx;
    
}
.news{
    background: #999;
    width: 100%;
    line-height: 100rpx;
    color: #fff;
    font-size: 40rpx; 
    border-bottom: 2rpx solid #ccc;
}
.news text{
    padding-left: 30rpx;
}
.news.fix-news{
    position: fixed;
    top:0;
    left: 0;
}
.news-list{
    width: 100%;
}
.news-list view{
    padding: 0 30rpx;
    line-height: 160rpx;
    text-align: left;
    border-bottom: 2rpx solid #ccc;
}
.news-list view:nth-last-child(1){
    border-bottom: 0;
}